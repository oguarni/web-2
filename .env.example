# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/spaces_logs

# PostgreSQL Configuration (for Sequelize)
DATABASE_URL=postgresql://user:pass@localhost:5432/spaces
POSTGRES_DB=spaces
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_HOST=postgres # Changed to 'postgres' for Docker networking
POSTGRES_PORT=5432

# JWT Secret
# Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-secure-secret-key-at-least-32-characters-long

# Session Secret
SESSION_SECRET=your-session-secret-here

# Server Port
PORT=3000

# Environment
NODE_ENV=development