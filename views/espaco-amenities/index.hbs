<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-link me-2"></i>Associações Espaço-Amenidade</h1>
    <a href="/espaco-amenities/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nova Associação
    </a>
</div>

<div class="card">
    <div class="card-body">
        {{#if espacoAmenities.length}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Espaço</th>
                        <th>Localização</th>
                        <th>Amenidade</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each espacoAmenities}}
                    <tr>
                        <td>
                            <strong>{{Espaco.nome}}</strong>
                            <br>
                            <small class="text-muted">ID: {{Espaco.id}}</small>
                        </td>
                        <td>{{Espaco.localizacao}}</td>
                        <td>
                            <strong>{{Amenity.nome}}</strong>
                            <br>
                            <small class="text-muted">ID: {{Amenity.id}}</small>
                        </td>
                        <td>{{#if Amenity.descricao}}{{Amenity.descricao}}{{else}}<span class="text-muted">-</span>{{/if}}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/espaco-amenities/{{Espaco.id}}/{{Amenity.id}}" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <form method="POST" action="/espaco-amenities/{{Espaco.id}}/{{Amenity.id}}?_method=DELETE" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-4">
            <i class="fas fa-link fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhuma associação encontrada</h5>
            <p class="text-muted">Associe amenidades aos espaços para começar</p>
            <a href="/espaco-amenities/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Criar primeira associação
            </a>
        </div>
        {{/if}}
    </div>
</div>