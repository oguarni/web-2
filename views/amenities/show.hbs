<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-star me-2"></i>Detalhes da Amenidade</h1>
    <div class="btn-group">
        <a href="/amenities" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
        <a href="/amenities/{{amenity.id}}/edit" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-muted">Informações da Amenidade</h5>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">ID</label>
                            <div class="fw-bold">{{amenity.id}}</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">Nome</label>
                            <div class="fw-bold">{{amenity.nome}}</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">Descrição</label>
                            <div class="fw-bold">{{#if amenity.descricao}}{{amenity.descricao}}{{else}}<span class="text-muted">-</span>{{/if}}</div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <h5 class="text-muted">Auditoria</h5>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">Criado em</label>
                            <div class="fw-bold">{{formatDateTime amenity.createdAt}}</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted">Última atualização</label>
                            <div class="fw-bold">{{formatDateTime amenity.updatedAt}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {{#if amenity.Espacos.length}}
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-building me-2"></i>Espaços que possuem esta amenidade
                </h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Localização</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each amenity.Espacos}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{nome}}</td>
                                <td>{{localizacao}}</td>
                                <td>
                                    <a href="/espacos/{{id}}" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-chart-bar me-2"></i>Estatísticas
                </h5>
                <div class="text-muted">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Espaços com esta amenidade:</span>
                        <span class="badge bg-info">{{amenity.Espacos.length}}</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-cogs me-2"></i>Ações
                </h5>
                <div class="d-grid gap-2">
                    <a href="/amenities/{{amenity.id}}/edit" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-2"></i>Editar Amenidade
                    </a>
                    <form method="POST" action="/amenities/{{amenity.id}}?_method=DELETE">
                        <button type="submit" class="btn btn-outline-danger w-100 btn-delete">
                            <i class="fas fa-trash me-2"></i>Excluir Amenidade
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>