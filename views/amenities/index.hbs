<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-star me-2"></i>Amenidades</h1>
    <a href="/amenities/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nova Amenidade
    </a>
</div>

<div class="card">
    <div class="card-body">
        {{#if amenities.length}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Espaços</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each amenities}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{nome}}</td>
                        <td>{{#if descricao}}{{descricao}}{{else}}<span class="text-muted">-</span>{{/if}}</td>
                        <td>
                            {{#if Espacos.length}}
                                <span class="badge bg-info">{{Espacos.length}} espaço(s)</span>
                            {{else}}
                                <span class="text-muted">Nenhum espaço</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/amenities/{{id}}" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/amenities/{{id}}/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="POST" action="/amenities/{{id}}?_method=DELETE" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-4">
            <i class="fas fa-star fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhuma amenidade encontrada</h5>
            <a href="/amenities/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Criar primeira amenidade
            </a>
        </div>
        {{/if}}
    </div>
</div>