{{#if isComum}}
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Minhas Reservas</h5>
                        <h3>{{stats.minhasReservas}}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/reservas" class="text-white text-decoration-none">
                    Ver minhas reservas <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Nova Reserva</h5>
                        <p class="mb-0">Reservar um espaço</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-plus fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/reservas/new" class="text-white text-decoration-none">
