<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Acesso Rápido</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/reservas" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-calendar-check me-2"></i>Reservas
                        </a>
                    </div>
                    {{#if isAdminOrGestor}}
                    <div class="col-md-3">
                        <a href="/espacos" class="btn btn-outline-success w-100 mb-2">
                            <i class="fas fa-building me-2"></i>Espaços
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/amenities" class="btn btn-outline-info w-100 mb-2">
                            <i class="fas fa-star me-2"></i>Amenidades
                        </a>
                    </div>
                    {{/if}}
                    <div class="col-md-3">
                        <a href="/api-docs" target="_blank" class="btn btn-outline-secondary w-100 mb-2">
                            <i class="fas fa-code me-2"></i>API Docs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>