<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-building me-2"></i>Espaços</h1>
    <a href="/espacos/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Novo Espaço
    </a>
</div>

<div class="card">
    <div class="card-body">
        {{#if espacos.length}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Localização</th>
                        <th>Capacidade</th>
                        <th>Amenidades</th>
                        <th>Status</th>
                        <th>Criado em</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each espacos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>
                            <strong>{{nome}}</strong>
                            {{#if descricao}}
                                <br><small class="text-muted">{{descricao}}</small>
                            {{/if}}
                        </td>
                        <td>{{localizacao}}</td>
                        <td>
                            <span class="badge bg-info">
                                <i class="fas fa-users me-1"></i>{{capacidade}}
                            </span>
                        </td>
                        <td>
                            {{#if amenities.length}}
                                <div class="d-flex flex-wrap">
                                    {{#each amenities}}
                                        <span class="badge bg-secondary me-1 mb-1">{{nome}}</span>
                                    {{/each}}
                                </div>
                            {{else}}
                                <span class="text-muted">Nenhuma</span>
                            {{/if}}
                        </td>
                        <td>
                            <span class="badge bg-{{#if ativo}}success{{else}}danger{{/if}}">
                                {{#if ativo}}Ativo{{else}}Inativo{{/if}}
                            </span>
                        </td>
                        <td>{{formatDateTime createdAt}}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/espacos/{{id}}" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/espacos/{{id}}/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="POST" action="/espacos/{{id}}?_method=DELETE" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-4">
            <i class="fas fa-building fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhum espaço encontrado</h5>
            <p class="text-muted">Crie o primeiro espaço para começar a receber reservas</p>
            <a href="/espacos/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Criar primeiro espaço
            </a>
        </div>
        {{/if}}
    </div>
</div>